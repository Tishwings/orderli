{% extends "layout/base.twig" %}
{% block pageContent %}
    <section class="section">
        <div class="container">
            <div class="columns is-centered">
                <div class="column is-half">
                    {% if order %}
                        <h2 class="title">Full Order</h2>
                        {% for orderer, orderEntries in order %}
                            <h3>{{ orderer }}</h3>
                            {% if orderEntries|first.extras %}
                            <p class="has-text-weight-light">‚Äú{{ orderEntries|first.extras }}‚Äù</p>
                            {% endif %}
                                <table class="table is-fullwidth">
                                    <tbody>
                                        {% for orderEntry in orderEntries %}
                                            <tr>
                                                <td style="width: 10%">
                                                    <strong>{{ orderEntry.menu_id }}&nbsp;</strong>
                                                </td>
                                                <td style="width: 75%">
                                                    {{ orderEntry.name }}
                                                    <p style="font-size: 14px; margin: 0; padding: 0">{{ orderEntry.description }}</p>
                                                </td>
                                                <td style="width: 15%">
                                                    {{ orderEntry.price }} ‚Ç¨
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                        {% endfor %}
                        <p>Total: <strong>{{ sum }} ‚Ç¨</strong></p>
                    {% else %}
                        <div class="has-text-centered">
                        <div class="content">
                            <header>
                                <span class="is-size-1">üßê</span>
                                <h2 class="title">Whaaaat!</h2>
                                <p class="subtitle">Seems like nobody placed an order. If you want to open an order again, you can do that by pressing the button below.</p>
                            </header>
                        </div>
                        <a href="{{ path_for('index') }}" class="button is-link">Create Order Session</a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}